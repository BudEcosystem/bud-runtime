# E2E Test Environment Configuration
# Copy this file to .env.e2e and update values as needed
#
# This configuration is used with Kind-based E2E testing.
# Run ./scripts/setup-kind.sh to create the test environment.

# ============================================================================
# Service URLs (Kind NodePort mappings)
# ============================================================================

# budapp service (NodePort 30082 -> localhost:9001)
E2E_BUDAPP_URL=http://localhost:9001

# Keycloak (NodePort 30080 -> localhost:9080)
E2E_KEYCLOAK_URL=http://localhost:9080

# budcluster service
E2E_BUDCLUSTER_URL=http://localhost:8002

# budsim service
E2E_BUDSIM_URL=http://localhost:8003

# budmodel service
E2E_BUDMODEL_URL=http://localhost:8004

# budmetrics service
E2E_BUDMETRICS_URL=http://localhost:8005

# budnotify service
E2E_BUDNOTIFY_URL=http://localhost:8006

# budgateway service
E2E_BUDGATEWAY_URL=http://localhost:3000

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL
E2E_POSTGRES_HOST=localhost
E2E_POSTGRES_PORT=5433
E2E_POSTGRES_USER=testuser
E2E_POSTGRES_PASSWORD=testpass
E2E_POSTGRES_DB=budapp_e2e

# Redis
E2E_REDIS_HOST=localhost
E2E_REDIS_PORT=6380
E2E_REDIS_PASSWORD=
# Full Redis URL (optional, overrides host/port if set)
# E2E_REDIS_URL=redis://:password@localhost:6380/2

# ClickHouse
E2E_CLICKHOUSE_HOST=localhost
E2E_CLICKHOUSE_PORT=8124
E2E_CLICKHOUSE_USER=chuser
E2E_CLICKHOUSE_PASSWORD=chpassword

# ============================================================================
# Test User Credentials
# ============================================================================

E2E_TEST_USER_EMAIL=test@example.com
E2E_TEST_USER_PASSWORD=TestPassword123!

E2E_ADMIN_USER_EMAIL=admin@example.com
E2E_ADMIN_USER_PASSWORD=AdminPassword123!

# ============================================================================
# Test Configuration
# ============================================================================

# Default timeout for tests (seconds)
E2E_TEST_TIMEOUT=300

# Workflow polling interval (seconds)
E2E_WORKFLOW_POLL_INTERVAL=5

# Maximum workflow wait time (seconds)
E2E_WORKFLOW_MAX_WAIT=600

# Enable debug logging
E2E_DEBUG=false

# ============================================================================
# Optional: Cloud Provider Credentials for Real Cluster Tests
# ============================================================================

# Azure (for real cluster onboarding tests)
# E2E_AZURE_SUBSCRIPTION_ID=
# E2E_AZURE_TENANT_ID=
# E2E_AZURE_CLIENT_ID=
# E2E_AZURE_CLIENT_SECRET=

# AWS (for real cluster onboarding tests)
# E2E_AWS_ACCESS_KEY_ID=
# E2E_AWS_SECRET_ACCESS_KEY=
# E2E_AWS_REGION=us-east-1

# ============================================================================
# Optional: Test Cluster Configuration
# ============================================================================

# Path to test kubeconfig (for cluster onboarding tests)
# E2E_TEST_KUBECONFIG_PATH=/path/to/test/kubeconfig

# Test cluster name
# E2E_TEST_CLUSTER_NAME=test-cluster

# ============================================================================
# Optional: Model Configuration
# ============================================================================

# Test model ID (HuggingFace)
E2E_TEST_MODEL_ID=meta-llama/Llama-2-7b-chat-hf

# Test model provider
E2E_TEST_MODEL_PROVIDER=huggingface

# ============================================================================
# Optional: External Service API Keys
# ============================================================================

# HuggingFace API token (for model tests)
# E2E_HUGGINGFACE_TOKEN=

# OpenAI API key (for cloud model tests)
# E2E_OPENAI_API_KEY=

# Anthropic API key (for cloud model tests)
# E2E_ANTHROPIC_API_KEY=
