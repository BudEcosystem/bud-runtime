# BudUseCases Service Configuration
# Copy this file to .env and fill in the values

# Application Settings
APP_NAME=budusecases
NAMESPACE=development
LOG_LEVEL=DEBUG
APP_PORT=9084

# Dapr Configuration
DAPR_HTTP_PORT=3512
DAPR_GRPC_PORT=50012
DAPR_INTERNAL_GRPC_PORT=50013
DAPR_PLACEMENT_HOST=0.0.0.0
DAPR_PLACEMENT_PORT=50016
DAPR_SCHEDULER_PORT=50017
DAPR_METRICS_PORT=9084
DAPR_API_TOKEN=

# Redis Configuration
SECRETS_REDIS_URI=0.0.0.0:6379
SECRETS_REDIS_PASSWORD=

# Database Configuration (PostgreSQL)
PSQL_HOST=0.0.0.0
PSQL_PORT=5436
PSQL_DB_NAME=budusecases
PSQL_USER=budusecases
PSQL_PASSWORD=budusecases

# Template Configuration
TEMPLATES_PATH=templates
TEMPLATES_SYNC_ON_STARTUP=true

# BudCluster Integration
BUDCLUSTER_APP_ID=budcluster
